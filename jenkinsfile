pipeline {
    agent any
    tools {nodejs "miNodejs"}
    environment {
        bot_token = credentials('token_telegram')
        chat_token = credentials('chatId')
    }
    stages {
        stage('Execution') {
            
            
            
            steps {

                 withCredentials([  string(credentialsId: 'token_telegram', variable: 'bot_token'),
                                    string(credentialsId: 'chat_token', variable: 'chat_token')])
                { 
                    node src/telegramBot.js "${bot_token}" "${chat_token}" "Pepe"'
                }
                
             }  

        }
       
    }
}
